{% macro metaitem(text) %}
    <span class="card__meta-item">
        {{ text }}
    </span>
{% endmacro %}

{% macro card(post) %}
    <a href="{{ post.url }}" class="card {% if post.featured %}card--featured{% endif %}">
        {% if post.feature_image %}
            <div class="card__image">
                <img src="{{ post.feature_image }}" alt="{{ post.title }}">
            </div>
        {% endif %}
        <div class="card__body">
            <h4 class="card {% if post.featured %}  text--inverted{% endif %}">{{ post.title }}</h4>
            <p class="card__meta">
                {{ metaitem("Featured") if post.featured }}
                {{ metaitem(post.published_at | safe | getRelativeTime) }}
                {{ metaitem(post.html | safe | getReadingTime) }}
                {{ metaitem(post.primary_author.name) }}
                {{ metaitem(post | getTags) }}
            </p>
            <p>{{ post.excerpt }}</p>
        </div>
    </a>
{% endmacro %}

