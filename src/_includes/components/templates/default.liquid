<!DOCTYPE html>
<html lang="{{ site.default_locale }}" class="no-js">
    <head>
        <title>
            {%- if pageTitle -%}
                {{ pageTitle }} – {{ site.title }}
            {%- else -%}
                {{ site.title }} – {{ site.description }}
            {%- endif -%}
        </title>
        <meta name="description" content="{% block description %}{{ site.description }}{% endblock %}">
        <meta name="robots" content="index,follow">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        
        {% block seo %}
            <!--Twitter Card-->
            <meta name="twitter:site" content="{{ site.twitter }}">
            <meta name="twitter:creator" content="{{ site.twitter }}">
            <meta name="twitter:card" content="summary_large_image">
            <meta name="twitter:url" content="{{ site.url }}{{ page.url }}">
            <meta name="twitter:title" content="{% if pageTitle %}{{ pageTitle }} – {{ site.title }}{% else %}{{ site.title }}{% endif %}">
            <meta name="twitter:description" content="{{ site.description }}">
            {% if site.cover_image %}
            <meta name="twitter:image" content="{{ site.cover_image }}">
            {% endif %}

            <!--Schema-->
            <link rel="author" href="{{ site.url }}">
            <link rel="publisher" href="{{ site.url }}">
            <meta itemprop="name" content="{% if pageTitle %}{{ pageTitle }} – {{ site.title }}{% else %}{{ site.title }}{% endif %}">
            <meta itemprop="description" content="{{ site.description }}">
            {% if site.cover_image %}
            <meta name="image" content="{{ site.cover_image }}">
            {% endif %}

            <!-- Facebook OpenGraph -->
            <meta property="og:url" content="{{ site.url }}{{ page.url}}">
            <meta property="og:type" content="website">
            <meta property="og:title" content="{% if pageTitle %}{{ pageTitle }} – {{ site.title }}{% else %}{{ site.title }}{% endif %}">
            {% if site.cover_image %}
            <meta name="og:image" content="{{ site.cover_image }}">
            {% endif %}
            <meta property="og:description" content="{{ site.description }}">
            <meta property="og:site_name" content="{{ site.title }}">
            <meta property="og:locale" content="{{ site.default_locale }}">
            <meta property="article:author" content="{{ site.url }}">
        {% endblock %}

        <link rel="stylesheet" href="{{ assets.css.main }}" />
        <link rel="stylesheet" href="{{ fonts.cssPath }}" />

        {% for feed in feeds %}
            <link rel="alternate" type="{{ feed.type }}" href="{{ site.url }}{{ feed.href }}" title="{{ feed.title }}" />
        {% endfor %}
        
        <script>document.documentElement.classList.remove('no-js');</script>

        <link rel="preconnect" href="https://fonts.gstatic.com">
        <link rel="preconnect" href="https://www.google-analytics.com">

        {% if site.ghost_head %}
            {{ site.ghost_head }}
        {% endif %}

        {% if site.codeinjection_head %}
            {{ site.codeinjection_head }}
        {% endif %}
        {% if codeinjection_head %}
            {{ codeinjection_head }}
        {% endif %}

        <link rel="shortcut icon" type="image/svg+xml" href="{{ site.icons.svg }}">
        <link rel="alternate icon" href="{{ site.icons.ico }}">
        <link rel="apple-touch-icon" href="{{ site.icons.apple }}">
        <link rel="mask-icon" href="{{ site.icons.maskIcon }}" color="{{ site.manifest.colours.theme }}">

        <link rel="manifest" href="{{ site.url }}manifest.json">
        
        <meta name="application-name" content="{{ site.title }}">
        <meta name="apple-mobile-web-app-title" content="{{ site.title }}">
        <meta name="theme-color" content="{{ site.manifest.colours.theme }}">

        <script>localStorage.getItem('theme') && document.documentElement.setAttribute('data-theme', localStorage.getItem('theme'));</script>
        <script src="{{ assets.js.main }}" type="module" defer></script>
    </head>
    <body class="base {% if bodyClass %} base--{{ bodyClass }} {{ bodyClass }}{% endif %}">
        {% include 'components/organisms/theme-drawer' %}
        <div class="base__inner">
            <div class="base__header">
                {% include 'components/organisms/header' %}
            </div>
            {% block content %}{% endblock %}
            <div class="base__footer">
                {% include 'components/organisms/footer' %}
            </div>
        </div>
        {% if site.ghost_foot %}
            {{ site.ghost_foot }}
        {% endif %}
    </body>
</html>