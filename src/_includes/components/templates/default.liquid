<!DOCTYPE html>
<html lang="{{ site.lang }}" class="no-js">
    <head>
        <title>
            {%- if pageTitle -%}
                {{ pageTitle }} – {{ site.title }}
            {%- else -%}
                {{ site.title }} – {{ site.description }}
            {%- endif -%}
        </title>
        <meta name="description" content="{% block description %}{{ site.description }}{% endblock %}">
        <meta name="robots" content="index,follow">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

        {% if site.icon %}
            <link rel="shortcut icon" type="image/png" href="{{ site.icon }}"/>
        {% endif %}
        
        {% block seo %}
            <!--Twitter Card-->
            <meta name="twitter:site" content="{{ site.twitter }}">
            <meta name="twitter:creator" content="{{ site.twitter }}">
            <meta name="twitter:card" content="summary_large_image">
            <meta name="twitter:url" content="{{ site.url }}{{ page.url }}">
            <meta name="twitter:title" content="{% if pageTitle %}{{ pageTitle }} – {{ site.title }}{% else %}{{ pageTitle }}{% endif %}">
            <meta name="twitter:description" content="{{ site.description }}">
            <meta name="twitter:image" content="{{ site.cover_image }}">

            <!--Schema-->
            <link rel="author" href="{{ site.url }}">
            <link rel="publisher" href="{{ site.url }}">
            <meta itemprop="name" content="{% if pageTitle %}{{ pageTitle }} – {{ site.title }}{% else %}{{ pageTitle }}{% endif %}">
            <meta itemprop="description" content="{{ site.description }}">
            <meta itemprop="image" content="{{ site.cover_image }}">

            <!-- Facebook OpenGraph -->
            <meta property="og:url" content="{{site.url }}{{ page.url}}">
            <meta property="og:type" content="website">
            <meta property="og:title" content="{% if pageTitle %}{{ pageTitle }} – {{ site.title }}{% else %}{{ pageTitle }}{% endif %}">
            <meta property="og:image" content="{{ site.cover_image }}">
            <meta property="og:description" content="{{ site.description }}">
            <meta property="og:site_name" content="{{ site.title }}">
            <meta property="og:locale" content="{{ site.lang }}">
            <meta property="article:author" content="{{ site.url }}">
        {% endblock %}

        <link rel="stylesheet" href="/styles/styles.css" /> 
        <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Anonymous+Pro&family=Karla:ital,wght@0,400;0,700;1,400&family=Rubik:ital,wght@0,700;1,400;1,700&display=swap" />

        <script>document.documentElement.classList.remove('no-js');</script>

        {% if site.codeinjection_head %}
            {{ site.codeinjection_head }}
        {% endif %}
        {% if codeinjection_head %}
            {{ codeinjection_head }}
        {% endif %}

        <script src="/js/app.js" defer></script>
    </head>
    <body class="base {% if bodyClass %} base--{{ bodyClass }} {{ bodyClass }}{% endif %}">
        <div class="base__inner">
            <div class="base__header">
                {% include 'components/organisms/header' %}
            </div>
            {% block content %}{% endblock %}
            <div class="base__footer">
                {% include 'components/organisms/footer' %}
            </div>
        </div>
    </body>
</html>