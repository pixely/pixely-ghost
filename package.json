{
  "name": "pixely-ghost",
  "description": "Ghost theme for personal site of Graham Martin",
  "version": "2.0.0",
  "license": "MIT",
  "author": "Graham Martin",
  "homepage": "https://github.com/pixely/pixely-ghost",
  "repository": {
    "type": "git",
    "url": "https://github.com/pixely/pixely-ghost.git"
  },
  "engines": {
    "node": ">= 14.15.0"
  },
  "bugs": {
    "url": "https://github.com/pixely/pixely-ghost.git/issues"
  },
  "keywords": [
    "ghost"
  ],
  "main": "n/a",
  "scripts": {
    "serve": "cross-env ELEVENTY_ENV=prod eleventy --serve && yarn assets:build",
    "build": "cross-env yarn assets:build && ELEVENTY_ENV=prod eleventy",
    "dev": "cross-env ELEVENTY_ENV=dev concurrently \"eleventy --serve\" \"yarn assets:watch\"",
    "lint": "yarn lint:es; yarn lint:stylelint",
    "lint:es": "eslint . --ext .js --cache",
    "lint:stylelint": "stylelint \"**/**.scss\"",
    "test": "yarn lint",
    "assets:watch": "yarn parcel watch 'src/styles/**/[^_]*.{css,scss}' 'src/js/**/*.js' --dist-dir dist",
    "assets:build": "yarn parcel build 'src/styles/**/[^_]*.{css,scss}' 'src/js/**/*.js' --dist-dir dist"
  },
  "devDependencies": {
    "babel-eslint": "^10.1.0",
    "concurrently": "^5.3.0",
    "eslint": "7.17.0",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-ghost": "2.0.0",
    "sass": "^1.32.2",
    "stylelint": "^13.8.0",
    "stylelint-config-airbnb": "^0.0.0",
    "stylelint-order": "^4.1.0",
    "stylelint-scss": "^3.18.0"
  },
  "dependencies": {
    "@11ty/eleventy": "^0.11.1",
    "@11ty/eleventy-cache-assets": "^2.0.4",
    "@11ty/eleventy-img": "^0.7.3",
    "@11ty/eleventy-plugin-rss": "^1.0.9",
    "@tryghost/content-api": "^1.4.12",
    "@tryghost/helpers": "^1.1.36",
    "cheerio": "1.0.0-rc.5",
    "clean-css": "^4.2.3",
    "cross-env": "^7.0.3",
    "dotenv": "^8.2.0",
    "eleventy-plugin-sass": "^1.1.1",
    "eslint-utils": "^2.1.0",
    "hast-util-is-element": "^1.1.0",
    "html-minifier": "^4.0.0",
    "liquidjs": "^9.19.0",
    "normalize.css": "^8.0.1",
    "parcel": "^2.0.0-beta.1",
    "rehype": "^11.0.0",
    "rehype-format": "^3.1.0",
    "rehype-partials": "^1.0.6",
    "unist-util-visit": "^2.0.3"
  }
}
