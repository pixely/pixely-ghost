{
  "source": ["src/styles/tokens/**/*.json"],
  "platforms": {
    "css": {
      "transformGroup": "css",
      "buildPath": ".tokens/css/",
      "files": [{
        "destination": "_variables.scss",
        "format": "css/variables"
      }]
    },
    "scss": {
      "transformGroup": "scss",
      "buildPath": ".tokens/scss/",
      "files": [{
        "destination": "_variables.scss",
        "format": "scss/map-deep"
      }]
    },
    "js": {
      "transformGroup": "js",
      "buildPath": ".tokens/js/",
      "files": [
        {
          "format": "javascript/es6",
          "destination": "_tokens.js"
        }
      ]
    }
  }
}
